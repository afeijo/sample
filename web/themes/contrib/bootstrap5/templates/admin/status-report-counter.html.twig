{#
/**
 * @file
 * Theme override for the status report counter.
 *
 * Available variables:
 * - amount: The number shown on counter.
 * - text: The text shown on counter.
 * - severity: The severity of the counter.
 *
 */
#}

{%
  set status = severity == 'checked' ? 'success' : (severity == 'warning' ? 'warning' : 'danger')
%}

<div class="card alert alert-{{ status }}">
  <div class="card-body text-center">
    <h5 class="card-title">{{ amount }} {{ text }}</h5>
    <a href="#{{ severity }}" class="btn btn-{{status}}"><span class="visually-hidden">{{ text }} </span>Details</a>
  </div>
</div>

